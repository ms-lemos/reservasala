@using Reserva.Web.Helpers
@using Reserva.Web.Infra

@if (Sessao.UsuarioAtivo == null)
{
    Response.Redirect("~/Login");
}
else
{
    <div id="navigation">
        <div class="profile-picture">
            <a href="@Url.Action("Index", "Dashboard")">
                <img src="~/Images/profile.png" class="img-circle m-b" alt="logo" style="width: 100px;">
            </a>

            <div class="stats-label text-color">
                <span class="font-extra-bold font-uppercase">@Sessao.UsuarioAtivo.Nome</span>

                <div class="dropdown">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                        <small class="text-muted">@Sessao.UsuarioAtivo.Cargo <b class="caret"></b></small>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs">
                        <li><a href="@Url.Action("Logout", "Login")">Sair</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <ul class="nav metismenu" id="side-menu">
            <li class="@Html.IsSelected("Dashboard", "Index")">
                <a href="@Url.Action("Index", "Dashboard")"> <span class="nav-label">Home</span> <span class="label label-bmp pull-right"><i class="fa fa-home"></i></span> </a>
            </li>
            <li class="@Html.IsSelected("Usuarios", "Index")">
                <a href="@Url.Action("Index", "Usuarios")">
                    <span class="nav-label">Usuários</span>
                </a>
            </li>
            <li class="@Html.IsSelected("Salas", "Index")">
                <a href="@Url.Action("Index", "Salas")">
                    <span class="nav-label">Salas</span>
                </a>
            </li>
        </ul>
    </div>
}