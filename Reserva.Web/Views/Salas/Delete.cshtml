@model Reserva.Domain.Entities.Sala

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-4">
                        <h2>Excluir sala</h2>

                    </div>
                </div>
            </div>
            <div class="panel-body">
                <h3>Você tem certeza que deseja completar esta ação?</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Codigo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Capacidade)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Capacidade)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Identificacao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Identificacao)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Sim, excluir" class="btn btn-danger" />
                        @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-default" })
                    </div>
                }

            </div>
        </div>
    </div>
</div>